{
    "files": {
        "include": "src/**/*.scss",
        "ignore": [
            "node_modules/**/*.*"
        ]
    },
    "rules": {
        "attribute-quotes": [ 2, {
            "include": false
        }],
        "class-name-format": [ 2, {
            "convention": "camelcase"
        }],
        "indentation": [ 2, {
            "size": 4
        }],
        "mixins-before-declarations": [ 2, {
            "exclude": [ "break" ]
        }],
        "no-color-literals": [ 2, {
            "allow-rgba": true
        }],
        "no-extends": 2,
        "no-ids": 2,
        "no-important": 2,
        "no-vendor-prefixes": [ 2, {
            "ignore-non-standard": true
        }],
        "quotes": [ 2, {
            "style": "single"
        }],
        "property-units": [ 2, {
            "global": ["rem"],
            "per-property": {"animation": ["s"], "transition": ["s"]}
        }],
        "variable-name-format": [ 2, {
            "convention": "hyphenatedlowercase"
        }]
    }
}
